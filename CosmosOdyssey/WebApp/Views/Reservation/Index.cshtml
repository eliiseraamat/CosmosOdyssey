@model WebApp.ViewModels.ReservationViewModel

<div class="container py-5">
    <div class="card shadow-lg">
        <div class="card-header text-white"  style="--bs-card-cap-bg: #1E387B">
            <h2 class="mb-0"><i class="bi bi-ticket-perforated"></i> Flight Reservation</h2>
        </div>

        <div class="card-body">
            <div class="row">
                <!-- Flight Details -->
                <div class="col-md-6">
                    <div class="flight-details p-4 border rounded">
                        <h3 class="text-center mb-4"><i class="bi bi-rocket"></i> Journey Details</h3>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="text-center">
                                <h4 class="fw-bold">@Model.Leg?.RouteInfo?.From?.Name</h4>
                                <small class="text-muted">Departure</small>
                            </div>

                            <div class="flight-route text-center mx-3">
                                <i class="bi bi-arrow-right fs-4 text-primary"></i>
                                <div class="distance-badge mt-1">
                                    <span class="badge bg-light text-dark">
                                        @Model.Leg?.RouteInfo?.Distance.ToString("N0") km
                                    </span>
                                </div>
                            </div>

                            <div class="text-center">
                                <h4 class="fw-bold">@Model.Leg?.RouteInfo?.To?.Name</h4>
                                <small class="text-muted">Destination</small>
                            </div>
                        </div>

                        <hr>

                        <div class="row">
                            <div class="col-6">
                                <p><i class="bi bi-calendar-check"></i> <strong>Departure:</strong></p>
                                <p class="ms-4">@Model.Provider?.FlightStart.ToString("yyyy-MM-dd HH:mm")</p>
                            </div>
                            <div class="col-6">
                                <p><i class="bi bi-calendar-event"></i> <strong>Arrival:</strong></p>
                                <p class="ms-4">@Model.Provider?.FlightEnd.ToString("yyyy-MM-dd HH:mm")</p>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <div>
                                <span class="badge bg-secondary text-white fs-6">
                                    <i class="bi bi-building"></i> @Model.Provider?.Company?.Name
                                </span>
                            </div>
                            <div>
                                <h3 class="text-success mb-0">
                                    @Model.Provider?.Price â‚¬
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reservation Form -->
                <div class="col-md-6">
                    <div class="p-4">
                        <h3 class="text-center mb-4"><i class="bi bi-person-lines-fill"></i> Passenger Information</h3>

                        <form method="post" class="needs-validation" novalidate>
                            <div class="mb-4">
                                <label for="FirstName" class="form-label">First Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input type="text" id="FirstName" name="FirstName" class="form-control form-control-lg" required />
                                    <div class="invalid-feedback">
                                        Please provide your first name.
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="LastName" class="form-label">Last Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input type="text" id="LastName" name="LastName" class="form-control form-control-lg" required />
                                    <div class="invalid-feedback">
                                        Please provide your last name.
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-5">
                                <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg px-4">
                                    <i class="bi bi-arrow-left"></i> Back
                                </a>
                                <button type="submit" class="btn btn-lg px-4 w-75" style="background-color: #1E387B; color: white">
                                    <i class="bi bi-check-circle"></i> Confirm Reservation
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<!-- Custom CSS -->
<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    .flight-details {
        background-color: #f8f9fa;
        height: 100%;
    }
    .flight-route {
        position: relative;
    }
    .flight-route:before {
        content: "";
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 2px;
        background: #dee2e6;
        z-index: -1;
    }
    .distance-badge {
        transform: translateY(10px);
    }
    .form-control-lg {
        padding: 0.75rem 1rem;
    }
</style>

<script>
    (function () {
        'use strict'
        
        var forms = document.querySelectorAll('.needs-validation')
        
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    
                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>