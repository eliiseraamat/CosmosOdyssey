@model WebApp.ViewModels.ReservationViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 reservation">
                <div class="card-header text-white py-4 text-center" style="--bs-card-cap-bg: #1E387B">
                    <h2 class="mb-0"><i class="bi bi-check-circle-fill"></i> Reservation Confirmed!</h2>
                </div>

                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <div class="icon-success mb-4">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="text-success">Thank you for your reservation!</h3>
                        <p class="text-muted">Your space journey is now confirmed. Details are below.</p>
                    </div>

                    <div class="row g-4" style="display: flex; flex-wrap: wrap;">
                        <div class="col-md-6" style="display: flex; flex-direction: column;">
                            <div class="flight-info p-4 border rounded h-100">
                                <h4 class="text-center mb-4"><i class="bi bi-rocket"></i> Flight Details</h4>

                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div class="text-center">
                                        <h5 class="fw-bold">@Model.Leg.RouteInfo!.From!.Name</h5>
                                        <small class="text-muted">Departure</small>
                                    </div>

                                    <div class="flight-route text-center mx-3">
                                        <i class="bi bi-arrow-right fs-4 text-primary"></i>
                                    </div>

                                    <div class="text-center">
                                        <h5 class="fw-bold">@Model.Leg.RouteInfo.To!.Name</h5>
                                        <small class="text-muted">Destination</small>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <p><i class="bi bi-calendar-check"></i> <strong>Departure:</strong></p>
                                        <p class="ms-4">@Model.Provider.FlightStart.ToString("yyyy-MM-dd HH:mm")</p>
                                    </div>
                                    <div class="col-6">
                                        <p><i class="bi bi-calendar-event"></i> <strong>Arrival:</strong></p>
                                        <p class="ms-4">@Model.Provider.FlightEnd.ToString("yyyy-MM-dd HH:mm")</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6" style="display: flex; flex-direction: column;">
                            <div class="h-100 p-4 border rounded">
                                <h4 class="text-center mb-4"><i class="bi bi-receipt"></i> Booking Summary</h4>

                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>Company:</span>
                                        <span class="badge bg-secondary text-white">@Model.Provider.Company!.Name</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>Price:</span>
                                        <span class="fw-bold text-success">@Model.Provider.Price â‚¬</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>Duration:</span>
                                        <span>
                                            @{
                                                var duration = Model.Provider.FlightEnd - Model.Provider.FlightStart;
                                                var hours = (int)duration.TotalHours;
                                                var minutes = duration.Minutes;
                                            }
                                            @hours.ToString("D2")h @minutes.ToString("D2")m
                                        </span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>Booking Date:</span>
                                        <span>@DateTime.Now.ToString("yyyy-MM-dd")</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-5">
                        <a href="/" class="btn btn-lg px-5" style="background-color: #1E387B; color: white">
                            <i class="bi bi-house-door"></i> Return Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
